  { id: 7, name: "Skin Care Kit", category: "Beauty", price: "$49", image: "/images/beauty_skincare.jpg" },
  { id: 8, name: "Hair Styling Tool", category: "Beauty", price: "$74", image: "/images/beauty_hairtool.jpg" },
  { id: 9, name: "Makeup Essentials", category: "Beauty", price: "$65", image: "/images/beauty_makeup.jpg" },
