import { Card, CardContent } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { motion } from "framer-motion";
import { ShoppingCart } from "lucide-react";

const products = [
  { id: 1, name: "Wireless Headphones", category: "Electronics", price: "$59", image: "/images/electronics_headphones.jpg" },
  { id: 2, name: "Smart Watch", category: "Electronics", price: "$129", image: "/images/electronics_smartwatch.jpg" },
  { id: 3, name: "Bluetooth Speaker", category: "Electronics", price: "$39", image: "/images/electronics_speaker.jpg" },
  { id: 4, name: "RC Car", category: "Toys & Games", price: "$45", image: "/images/toys_rccar.jpg" },
  { id: 5, name: "Building Blocks Set", category: "Toys & Games", price: "$32", image: "/images/toys_blocks.jpg" },
